	"engines": {
		"npm": ">=7.21.0",
		"node": ">=14"
	},
	"main": "dist/codex.umd.js",
	"module": "dist/codex.es.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
